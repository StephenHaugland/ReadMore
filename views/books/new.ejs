<% layout('layouts/boilerplate')%>
<div class="container">
  <a class="shelfTitle"href="/entries">Back to Library</a>
  <h1>New Book</h1>


  <div class="row">
    <div class=" col-sm-2">
      <div class="card mb-3" style="max-width: 400px;">
        <div class="row g-0">
          <div class="text-center">
            <img src="/images/genericbookcover.jpg" class="img-thumbnail float-start w-100" alt="book cover">
             
          </div>
        </div>  
      </div>
    </div>
    <div class="col-sm-10">
      <div class="card">
        <div class="card-body text-center col">
            <form action="/books" method="POST" novalidate class="validated-form">
                <div class="mb-1 row">
                    <label class="form-label m-1 col-3" for="title">Title</label>
                    <input class="form-control py-0 col me-5" type="text" id="title" name="book[title]" required >
                    
                </div>
                <div class="mb-1 row">
                    <label class="form-label m-1 col-3" for="subtitle">Subtitle</label>
                    <input class="form-control py-0 col me-5" type="text" id="subtitle" name="book[subtitle]" >
                    
                </div>
                <div class="mb-1 row">
                    <label class="form-label m-1 col-3" for="author">Author</label>
                    <input class="form-control py-0 col me-5" type="text" id="author" name="book[author]" required >
                  
                </div>
        
                <div class="mb-1 row">
                    <label class="form-label m-1 col-3" for="genre">Genre</label>
                    <input class="form-control py-0 col me-5" type="text" id="genre" name="book[genre]" required >
              
                </div>

                <div class="mb-1 row">
                    <label class="form-label m-1 col-3" for="pageCount"><span>Page Count</span></label>
                    <input class="form-control py-0 col me-5" type="number" id="pageCount" name="book[pageCount]" >
                    
                </div>

                <div class="mb-1 row ">
                    <label class="form-label m-1 col" for="description">Description</label>
                    <textarea rows=4 class="form-control py-0 mx-0" type="text" id="description" name="book[description]" ></textarea>
                    
                </div>
                <input type = "hidden" name = "book[coverUrl]" value ="/images/genericbookcover.jpg" />

        
                
                <div class="mb-3">
                    <button class="btn btn-success">Create Book</button>
                </div>
            </form>
          
        </div>
      </div>
    </div>

    

  </div>
</div>
