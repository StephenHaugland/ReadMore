<% layout('layouts/boilerplate')%>


<div>
  <div class="container">
    <div class="row">
      <div class="col-sm">
        <div class="card mb-3" style="max-width: 540px;">
          <div class="row g-0">
            <div class="col-md-4">
              <img src="<%= book.coverUrl %>"
               class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= book.title %></h5>
                <h6><%= book.subtitle %></h6>
                <p class="card-text"><%= book.author %></p>
                <p class="card-text"><%= book.genre %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm">
        <h2>Reading Information</h2>
        <form action="/entries" method="POST" novalidate class="validated-form">
          <input type = "hidden" name = "entry[book]" value ="<%= book._id %>" />
          <div class="mb-3">
              <label class="form-label" for="notes">Notes about book:</label>
              <input class="form-control" type="text" id="notes" name="entry[notes]" required>
          </div>

          <div class="mb-3">
              <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" id="read" name="entry[shelf]"required value="read"></input>
                  <label class="form-check-label" for="read">Read</label>
              </div>
              
              <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" id="Reading" name="entry[shelf]"required value="reading"></input>
                  <label class="form-check-label" for="Reading">Reading</label>
              </div>
              <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" id="WantToRead" name="entry[shelf]"required value="wantToRead"></input>
                  <label class="form-check-label" for="WantToRead">Want to Read</label>
              </div>
              
          </div>
          
          <div class="mb-3">
              <button class="btn btn-success">Add book to shelf</button>
          </div>
      </form>

      </div>


    </div>
  </div>
    
    

    <a href="/books/<%=book._id%>/edit">Edit</a>


  <a href="/books">Back to all books</a>
  <form action="/books/<%= book._id%>?_method=DELETE" method="POST">
      <button>
          Delete
      </button>
  </form>
</div>