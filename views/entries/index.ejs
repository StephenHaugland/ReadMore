<% layout('layouts/boilerplate')%>



<div>
    <div class="container mb-3">
        <div class="row justify-content-start">
            <div class="col-auto">
                <h1><a class="shelfTitle"href="entries">Library</a></h1>
            </div>
            <div class="col-auto">
                <a href="search" class="btn btn-success">+ Add Book</a>
            </div>
        </div>
    </div>

    <div class="container">
        <form action="/entries" method="GET">
            <div class="d-inline-flex">
                <!-- <label for="filter">Filter by genre: </label> -->
                <input class="form-control" name="genre" list="genreOptions" id="filter" placeholder="Filter by genre" autocomplete="off" required>
                <datalist id="genreOptions">
                    <option value="Fiction">
                    <option value="History">
                    <option value="Nonfiction">
                    <option value="Religious">
                    <option value="Young Adult">
                    <option value="Psychology">
                    <option value="Economics">
                        
                        
                    </datalist>
                <button class="btn btn-primary">
                    Filter
                </button>

            </div>
            

        </form>
    </div>


    <% if (filter === "") {%>
    <div class="container mx-0 px-0">
        <div class="row">
            <% if (display.read) {%>
            <div class="col-xs-12 col-md-4">
                <h3><a class="shelfTitle" href="entries?shelf=read">Read</a> (<%= shelfSortedEntries.read.length %>)</h3>
                <% for (let e of shelfSortedEntries.read) { %>
                    <p class="my-1"><a href="entries/<%=e._id%>"><%= e.book.title %></a> - <%= e.book.author %> <a href="entries?genre=<%=e.book.genre%>"><span class="badge bg-secondary" id="category"><%=e.book.genre%></span></a></p>
                <% } %>
            </div>
            <% } %>
            <% if (display.reading) {%>
            <div class="col-xs-12 col-md-4">
                <h3><a class="shelfTitle" href="entries?shelf=reading">Reading </a>  (<%= shelfSortedEntries.reading.length %>)</h3>
                <% for (let e of shelfSortedEntries.reading) { %>
                    <p class="my-1"><a href="entries/<%=e._id%>"><%= e.book.title %></a> - <%= e.book.author %> <a href="entries?genre=<%=e.book.genre%>"><span class="badge bg-secondary" id="category"><%=e.book.genre%></span></a></p>
                <% } %>
            </div>
            <% } %>
            <% if (display.wanttoread) {%>

            <div class="col-xs-12 col-md-4">
                <h3><a class="shelfTitle" href="entries?shelf=wanttoread">Want to Read</a> (<%= shelfSortedEntries.wantToRead.length %>)</h3>
                <% for (let e of shelfSortedEntries.wantToRead) { %>
                    <p class="my-1"><a href="entries/<%=e._id%>"><%= e.book.title %></a> - <%= e.book.author %> <a href="entries?genre=<%=e.book.genre%>"><span class="badge bg-secondary" id="category"><%=e.book.genre%></span></a></p>
                <% } %>
            </div>
            <% } %>
        </div>
    </div>
    
    <% } else {%>
        <div class="container mx-0 px-0">
            <div class="row">
                <div class="col-xs-12 col-md-4">
                    <h3><%= filter %> (<%= filteredEntries.length %>)</h3>
                    <% for (let e of filteredEntries) { %>
                        <p class="my-1"><a href="entries/<%=e._id%>"><%= e.book.title %></a> - <%= e.book.author %> <span class="badge bg-secondary" id="category"><%=e.book.genre%></span></p>
                    <% } %>
                </div>
            </div>
        </div>


    <% } %>

  

</div>
