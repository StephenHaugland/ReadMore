<% layout('layouts/boilerplate')%>
<h1>ReadMore</h1>
<div class="container d-flex justify-content-center align-items-center">
    <div>

        <div class="text-center row justify-content-center">
            <div class="col-8">

                
                <p>ReadMore is designed to help you catalog and keep track of all the books you are currently reading,
                    the books you want to read, and an archive of the books you've read in the past.</p>
                    <p>To get started register an account below or login if you already have an account.</p>
                    
            </div>
        </div>
        
        <div class="row justify-content-center">

            <div class="card shadow col-xs-6 col-md-6 col-lg-4">
                <div class="card-body">
                <h5 class="card-title">Register</h5>
                <form action="/register" method="POST" class="validated-form" novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="username">Username</label>
                        <input class="form-control" type="text" id="username" name="username" required autofocus>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="email">Email</label>
                        <input class="form-control" type="email" id="email" name="email" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="password">Password</label>
                        <input class="form-control" type="password" id="password" name="password" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <button class="btn btn-success btn-block">Register</button>
                </form>
                
            </div>
        </div>

        </div>
        <div class="row justify-content-center">
            <div class="col text-center">
                <p>Already have an account? Sign in <a href="/login">here</a></p>
                <!-- <a class="btn btn-success" href="/login">Login</a> -->
            </div>
        </div>
    </div>
</div>