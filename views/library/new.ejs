<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Book</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/library" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="book[title]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="Author">Author</label>
                <input class="form-control" type="text" id="author" name="book[author]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="Genre">Genre</label>
                <input class="form-control" type="text" id="genre" name="book[genre]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <div>
                    <input class="form-check-input" type="radio" id="toRead" name="book[list]"required value="toRead"></input>
                    <label class="form-check-label" for="toRead">To Read</label>
                </div>
                <div>
                    <input class="form-check-input" type="radio" id="currentlyReading" name="book[list]"required value="currentlyReading"></input>
                    <label class="form-check-label" for="currentlyReading">Currently Reading</label>
                </div>
                <div>
                    <input class="form-check-input" type="radio" id="read" name="book[list]"required value="read"></input>
                    <label class="form-check-label" for="read">Read</label>
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            
            <div class="mb-3">
                <button class="btn btn-success">Add Book To Library</button>
            </div>
        </form>
        <a href="/library">All Books</a>
    </div>
</div>